<!DOCTYPE html>
<html lang='fr'>

<head>

    <title>size-classifications</title>

    <!-- @import ../features/head.kit -->

    <!--    custom    -->
    <link rel='stylesheet' type='text/css' media='all' href='/dist/css/custom.css'>

    <link rel="shortcut icon" href="#" />
</head>

<body>
    <header class="grid__header">
        <!-- @import ../features/nav.kit -->

    </header>
    <div class="grid" style="grid-template-columns:1fr;">

        <main id="main" class="grid__main">
            <div class="main-content  [ flow ] ">
                <div class="gridArticle__section-head ">
                    <h1> Size classifications</h1>
                    <h4> collection of my works. </h4>
                    <hr>
                </div>
                <div class="col" style="margin-left: 0;">
                    <div class="flex">
                        <div class="col">
                            <h2 id="html">Extra small (320) </h2>
                            <hr>
                            <p>
                            <pre>
(240px) 320px-400px
Media query: none-above the media queries
Font-size: 100% (16px)
Line-height: 1.3 (130% )
Bottom margins: [ flow ] 

html {
   font-size: 100%
   line-height: 1.3;
}
.flow > * + * {
   margin-top: 1rem;
}
                        </pre>
                            </p>
                        </div>
                        <div class="col">
                            <h2 id="html">Small (400)</h2>
                            <hr>
                            <p>
                            <pre>
400px-608px
Media query: 25em
Font-size: 100% (16px)
Line-height: 1.3 (130%)
Bottom margins: [ flow ]

@media only screen and (min-width: 25em) {
   html {
      font-size: 100%
      line-height: 1.3;
   }
   .flow > * + * {
      margin-top: 1rem;
   }
}
                    </pre>
                            </p>
                        </div>
                    </div>
                    <div class="flex">
                        <div class="col">
                            <h2 id="html">Medium (608)</h2>
                            <hr>
                            <p>
                            <pre>
608px-960px
Media query: 38em
Font-size: 110% (17px)
Line-height: 1.4 (140%).
Bottom margins: [ flow ]

@media only screen and (min-width: 38em) {
    html {
        font-size: 110%
        line-height: 1.4;
    }
    .flow > * + * {
        margin-top: 1.25rem;
    }
}
                        </pre>
                            </p>
                        </div>
                        <div class="col">
                            <h2 id="html">Large (960)</h2>
                            <hr>
                            <p>
                            <pre>
960px-1440px
Media query: 60em
Font-size: 120% (19px)
Line-height: 1.5 (150%)
Bottom margins: [ flow ]

@media only screen and (min-width: 60em) {
    html {
        font-size: 120%
        line-height: 1.5;
    }
    .flow > * + * {
        margin-top: 1.35rem;
    }
}
                                </pre>
                            </p>
                        </div>
                    </div>
                    <div class="flex">
                        <div class="col">
                            <h2 id="html">Extra large (1440)</h2>
                            <hr>
                            <p>
                            <pre>
1440px+
Media query: 90em
Font-size: 130% (20px)
Line-height: 1.5 (150%)

@media only screen and (min-width: 90em) {
    html {
        font-size: 130%
        line-height: 1.5;
    }
    .flow > * + * {
        margin-top: 1.5rem;
    }
}
                                </pre>
                            </p>
                        </div>
                    </div>
                </div>
        </main>
    </div>

    <!-- @import ../features/footer.kit -->
</body>

</html>